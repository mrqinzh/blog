<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mrqinzh.blog.mapper.CommentMapper">

    <resultMap id="baseMap" type="Comment">
        <id property="id" column="id" />
        <result property="avatar" column="avatar" />
        <result property="nickname" column="nickname" />
        <result property="articleId" column="article_id" />
        <result property="commentContent" column="comment_content" />
        <result property="commentTime" column="comment_time" />
        <result property="parentId" column="parent_id" />
        <result property="ip" column="ip" />
        <association property="article" javaType="Article">
            <result property="articleTitle" column="article_title" />
        </association>
    </resultMap>

    <insert id="add" parameterType="Comment">
        INSERT INTO `comment` (
            avatar,
            nickname,
            comment_content,
            article_id,
            parent_id,
            ip
        )
        VALUES
            (
                #{avatar},
                #{nickname},
                #{commentContent},
                #{articleId},
                #{parentId},
                #{ip}
            )
    </insert>

    <select id="getById" resultMap="baseMap">
        SELECT
            *
        FROM
            `comment` c
        LEFT JOIN article a ON a.id = c.article_id
        WHERE
            1 = 1
        <if test=" idType == 'commentId'">
            and id = #{id}
        </if>
        <if test=" idType == 'articleId'">
            and article_id = #{id}
        </if>
    </select>

    <update id="deleteById">
        UPDATE `comment`
        SET status = 1
        WHERE
            1 = 1
        <if test=" idType == 'commentId'">
            and id = #{id}
        </if>
        <if test=" idType == 'articleId'">
            and article_id = #{id}
        </if>
    </update>

</mapper>